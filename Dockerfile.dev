# =============================================================================
# Autonomous Research Agent - Development Docker Image
# =============================================================================
# Development image with hot reload and debugging support
# =============================================================================

FROM python:3.14-slim

LABEL maintainer="Research Agent Team" \
      version="1.0.0-dev" \
      description="Autonomous Research Agent - Development Image"

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    APP_ENV=development \
    DEBUG=true

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gnupg \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (required for Claude CLI)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y --no-install-recommends nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Claude CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Copy and install dependencies
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install -r requirements.txt

# Install development dependencies
RUN pip install pytest pytest-asyncio pytest-cov black ruff watchdog

# Copy package files
COPY pyproject.toml .
COPY src/ ./src/
RUN pip install -e .

# Copy application files
COPY streamlit_app.py .
COPY .env.example .

# Create directories
RUN mkdir -p /app/research_sessions /app/papers

EXPOSE 8501

# Run with hot reload enabled
CMD ["streamlit", "run", "streamlit_app.py", \
     "--server.port=8501", \
     "--server.address=0.0.0.0", \
     "--server.runOnSave=true", \
     "--server.headless=true"]
